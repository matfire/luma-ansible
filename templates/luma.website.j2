server {
    listen 80;
    server_name {{root_host}};

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /root/luma_{luma_project}/;
    }
    location / {
        include proxy_params;
        proxy_pass http://unix:/run/luma_{{luma_project}}.sock;
    }
}